<section>
<h2><%= link_to 'Design Contracts', '/design-docs',  class: "btn btn-info" %> <%= link_to 'Music Contracts', '/music-docs',  class: "btn btn-info" %> <%= link_to 'Legal Contracts', '/legal-docs',  class: "btn btn-info" %> <%= link_to 'New Design Contract', '/design-docs/new', class: "btn btn-info" %> <%= link_to 'New Music Contract', '/music-docs/new', class: "btn btn-info" %> <%= link_to 'New Legal Contract', '/legal-docs/new', class: "btn btn-info" %> <%= link_to 'All Clients', '/clients', class: "btn btn-info" %></h2>
