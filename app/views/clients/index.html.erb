  <h3>Job ID: <a href="/music-docs/<%= music_contract.id %>"><%= music_contract.title %></a></h3>
  <h3>Gig Due Date: <%= music_contract.due_date %></h3>
<% end %>
<br>
<h2>Existing Legal Contracts</h2>
<% @legal_contracts.each do |legal_contract| %>
  <h3>Contract Title: <%= legal_contract.title %></h3>
  <h3>Job ID: <a href="/legal-docs/<%= legal_contract.id %>"><%= legal_contract.title %></a></h3>
  <h3>Deposition/Patent Filing Due Date: <%= legal_contract.due_date %></h3>
<% end %>
</section>
