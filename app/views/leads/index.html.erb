<p id="notice"><%= notice %></p>

<h1>Leads</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <td><%= image_tag lead.logo.url(:thumb) %></td>
        <td><%= lead.firstname %></td>
        <td><%= lead.lastname %></td>
        <td><%= lead.email %></td>
        <td><%= lead.phone %></td>
        <td><%= lead.company %></td>
        <td><%= link_to 'Show', "/leads/#{lead.id}" %></td>
        <td><%= link_to 'Edit', "/leads/#{lead.id}" %></td>
        <td><%= link_to 'Destroy', "/leads/#{lead.id}", method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lead', '/leads/new' %>
