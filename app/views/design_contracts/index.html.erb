<section>
<h2><%= link_to 'Design Contracts', '/design-docs',  class: "btn btn-info" %> <%= link_to 'New Design Contract', '/design-docs/new', class: "btn btn-info" %> <%= link_to 'All Clients', '/clients', class: "btn btn-info" %></h2>
<br>
<h2>Existing Design Contracts</h2>
<% @design_contracts.each do |design_contract| %>
  <h3>Designer: <%= design_contract.designer %></h3>
  <h3>Client: <%= design_contract.client %></h3>
  <h3>Project Title: <a href="/design-docs/<%= design_contract.id %>"><%= design_contract.title %></a></h3>
  <h3>Gig Due Date: <%= design_contract.due_date %></h3>
  <h3>Project Specs: <%= design_contract.specs %></h3>

  <h4>Billable Hours: <%= design_contract.billable_hours %> </h4>

<% end %>
</section>
