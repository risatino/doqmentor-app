<section>
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h2>Edit Music Document</h2>

    <%= form_tag "/music-docs/#{ @music_contract.id }", method: :patch do %>
      
      <div>
        <%= label_tag :musician %>
        <%= text_field_tag :musician, @music_contract.musician %>
      </div>
      
      <div>
        <%= label_tag :client %>
        <%= text_field_tag :client, @music_contract.client %>
      </div>
       
      <div>
        <%= label_tag :gig_name %>
        <%= text_field_tag :gig_name, @music_contract.gig_name %>
      </div>

      <div>
        <%= label_tag :title %>
        <%= text_field_tag :title, @music_contract.title %>
      </div>

      <div>
        <%= label_tag :event_venue %>
        <%= text_field_tag :event_venue, @music_contract.event_venue %>
      </div>
      
      <div>
        <%= label_tag :notes %>
        <%= text_field_tag :notes, @music_contract.notes %>
      </div>
      
      <div>
        <%= label_tag :due_date %>
        <%= text_field_tag :due_date, @music_contract.due_date %>
      </div>

      <div>
        <%= label_tag :billable_hours %>
        <%= text_field_tag :billable_hours, @music_contract.billable_hours %>
      </div>
      
      <div>
        <% hidden_field_tag :client_id %>
      </div>
      <br>
        <%= hidden_field_tag :signature, '', class: 'signature_pad_input' %>
        <div class="signature_pad text-center">
          <div class="signature_pad_body">
            <canvas></canvas>
          </div>
          <div class="signature_pad_footer">
            <div class="text-muted">CLIENT SIGNATURE above</div>
            <button type="button" class="btn btn-default signature_pad_clear">Clear</button>
            <%= submit_tag 'Submit Document Updates', class: 'btn btn-default signature_pad_save'  %>
          </div>
        </div>
      <br>
        <% end %>
      <br>
    <div>
  </div>
</div>  
</section>